<div class="container px-6 px-sm-0">
	<%= render 'messages/error_message', var: @new_book %>
	<div class="row">
		<%= render 'devise/shared/user_info', new_book: @new_book , user: @user%>
		<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user_id) do %>
								<%= image_tag @users.find(book.user_id).get_profile_image , size: "80x80" %>
							<% end %>
						</td>
						<td><%= link_to book.title, (book_path(book.id))%></td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>

