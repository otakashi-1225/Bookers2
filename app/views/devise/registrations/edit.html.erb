<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User Info</h2>

  <%= form_with model: @user, url: edit_user_registration_path(@user.id), method: :patch do |f| %>
    <div class="form-group">
  	  <label class="user-name">Name</label>
  	  <%= f.text_field :name  class: 'form-control user_name' %>
  	</div>

    <div class="form-group">
  	  <label class="user-image">Image</label>
  	  <%= f.text_field :name  class: 'form-control user_name' %>
  	</div>


    <div class="form-group">
  	  <label class="user-introduction">introduction</label>
  	  <%= f.text_area :introduction  class: 'form-control user_introduction' %>
  	</div>
    <%= f.submit 'Update User' %>
  <% end %>
</div>