<div class='container'>
	<div class='row'>
		<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
			<h2>User Info</h2>
		  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

			<div class="form-group">
					<label class="user_name">Name</label>
					<%= f.text_field :name,  class: 'form-control user_name' %>
			</div>

			<div class="form-group">
					<label class="user_image">Image</label>
				  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file user_image' %>
			</div>

			<div class="form-group">
					<label class="user_introduction">Name</label>
					<%= f.text_area :introduction,  class: 'form-control user_introduction' %>
			</div>

			<%= f.submit "Update User", class: 'btn btn-secondary' %>

			<% end %>
		</div>
	</div>
</div>