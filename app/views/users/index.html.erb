<div class="container px-5 px-sm-0">
	<div class="row">
		<% if user_signed_in? and %>
			<%= render 'devise/shared/user_info', new_book: @new_book, user: @user%>
		<% end %>

		<div class="col-md-8 offset-md-1">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= image_tag user.get_image , size: "80x80"%>
						</td>
						<td><%= user.name %></td>
						<td><%= link_to "Show", (user_path(user.id))%></td>
					</tr>
				<% end %>
				</tbody>
			</table>

		</div>
	</div>
</div>

