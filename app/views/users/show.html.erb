<div class="container px-6 px-sm-0">
	<div class="row">
		<% if user_signed_in? and %>
			<%= render 'devise/shared/user_info', new_book: @new_book, user: @user%>
		<% end %>

		<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
						<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>